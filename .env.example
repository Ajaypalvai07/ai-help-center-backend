# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=AI Assistant API

# MongoDB Settings
MONGODB_URL=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=ai_assistance

# JWT Settings
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral
OLLAMA_TIMEOUT=60

# Security Settings
ENCRYPTION_KEY=your_encryption_key_here
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "your_production_url_here"]
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
MAX_CONCURRENT_REQUESTS=1000

# Performance Settings
REQUEST_TIMEOUT=30
CACHE_TTL=3600
SESSION_TTL=86400

# Frontend Settings
VITE_MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
VITE_DB_NAME=ai_assistance
VITE_JWT_SECRET=your_jwt_secret_here
VITE_API_URL=your_api_url_here
VITE_AI_MODEL=mistral

# Redis Settings (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# AI Settings
HUGGINGFACE_API_KEY=your-huggingface-api-key
AI_MODEL_NAME=meta-llama/Llama-2-7b-chat-hf
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Optional: Monitoring
VITE_SENTRY_DSN=your-sentry-dsn